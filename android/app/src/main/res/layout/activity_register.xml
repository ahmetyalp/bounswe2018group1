<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="27dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/register_text"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAlreadyRegistered"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:clickable="true"
            android:gravity="end|center_vertical"
            android:text="@string/already_registered_text"
            android:textColor="#B00000"
            android:textSize="15sp"
            android:focusable="true" />

        <TextView
            android:id="@+id/textViewRNickname"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="@string/nickname_text" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewRFirstName"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="@string/first_name_text" />

        <EditText
            android:id="@+id/editTextRFirstName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewRSurname"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="@string/surname_text" />

        <EditText
            android:id="@+id/editTextRSurname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewREmail"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="@string/email_text" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewRPassword"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="@string/password_text" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewRConfirm"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="@string/confirm_password_text" />

        <EditText
            android:id="@+id/editTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="81dp"
            android:layout_marginBottom="27dp"
            android:background="#B04038"
            android:text="@string/register_text"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonFacebook"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="27dp"
            android:background="#2C58A0"
            android:text="@string/sign_up_with_facebook_text"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonSGoogle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="27dp"
            android:background="#D84028"
            android:text="@string/sign_up_with_google_text"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>