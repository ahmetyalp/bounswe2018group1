<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="27dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/log_in_text"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSignup"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:clickable="true"
            android:gravity="end|center_vertical"
            android:text="@string/sign_up_text"
            android:textColor="#B00000"
            android:textSize="15sp"
            android:focusable="true" />

        <TextView
            android:id="@+id/textViewLName"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="@string/nickname_or_email_text" />

        <EditText
            android:id="@+id/editTextLName"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:drawableStart="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="5dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewLPassword"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:text="@string/password_text" />

        <EditText
            android:id="@+id/editTextLPassword"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="5dp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textViewForgot"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:clickable="true"
            android:gravity="end|center_vertical"
            android:text="@string/forgot_your_password_text"
            android:textColor="#B00000"
            android:textSize="15sp"
            android:focusable="true" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="81dp"
            android:layout_marginBottom="27dp"
            android:background="#B04038"
            android:text="@string/log_in_text"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonLFacebook"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="27dp"
            android:background="#2C58A0"
            android:text="@string/log_in_with_facebook_text"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonLGoogle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="27dp"
            android:background="#D84028"
            android:text="@string/log_in_with_google_text"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>